#!/usr/bin/make -f

# Debian packaging rules for VideoStream library
# See debian/changelog for version management

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	  dh_auto_configure -- \
			-DCMAKE_LIBRARY_ARCHITECTURE="$(DEB_TARGET_MULTIARCH)" \
			-DCMAKE_BUILD_TYPE=Release \
			-DCMAKE_INSTALL_PREFIX=/usr \
			-DINSTALL_MANUAL=$(INSTALL_MANUAL) \
			-DSYSTEM_INSTALL=ON

override_dh_shlibdeps:

override_dh_installdocs:
	# Install LICENSE and NOTICE to all packages
	dh_installdocs LICENSE NOTICE
	# Install README to -dev package
	dh_installdocs -plibvideostream-dev README.md
